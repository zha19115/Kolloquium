@{
}

@model List<Kolloquium.Models.Entities.Customer>

<h1>Customers</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Newsletter</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.c_id</td>
                <td>@customer.c_name</td>
                <td>@customer.c_email</td>
                <td>@customer.c_phone</td>
                <td>@customer.c_newsletter</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Customers" asp-action="Edit" asp-route-id="@customer.c_id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>