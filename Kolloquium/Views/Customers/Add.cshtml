@{
}

@model Kolloquium.Models.AddCustomerViewModel

<h1>Add Customer</h1>

<form method="post">

    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="c_name"/>
    </div>
    <div class="mt-3">
        <label class="form-label">Phone</label>
        <input type="text" class="form-control" asp-for="c_phone"/>
    </div>
    <div class="mt-3">
        <label class="form-label">Email</label>
        <input type="text" class="form-control" asp-for="c_email"/>
    </div>
    <div class="mt-3">
        <input type="checkbox" class="form-check-input" id="Newsletter" asp-for="c_newsletter"/>
        <label class="form-check-label" for="Newsletter">Newsletter</label>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>

</form>

